<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding">

        <TextView
                android:id="@+id/eight_second_card_view_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="@dimen/default_text_size"
                android:textColor="#000"
                android:text="USD"/>


        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5">
            <TextView
                    android:id="@+id/eight_second_card_view_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/default_text_size"
                    android:textColor="#000"
                    android:text="21.33"/>

            <TextView
                    android:id="@+id/eight_second_card_view_buy_div"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/eight_second_card_view_buy"
                    android:layout_alignBottom="@id/eight_second_card_view_buy"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/eight_second_card_view_good"
                    android:text="+0.05"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5">
            <TextView
                    android:id="@+id/eight_second_card_view_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/default_text_size"
                    android:textColor="#000"
                    android:text="21.33"/>

            <TextView
                    android:id="@+id/eight_second_card_view_sell_div"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/eight_second_card_view_sell"
                    android:layout_alignBottom="@id/eight_second_card_view_sell"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/eight_second_card_view_bad"
                    android:text="-0.05"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5">
            <TextView
                    android:id="@+id/eight_second_card_view_nbu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/default_text_size"
                    android:textColor="#000"
                    android:text="21.33"/>

            <TextView
                    android:id="@+id/eight_second_card_view_nbu_div"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/eight_second_card_view_nbu"
                    android:layout_alignBottom="@id/eight_second_card_view_nbu"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/eight_second_card_view_good"
                    android:text="+0.05"/>
        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>