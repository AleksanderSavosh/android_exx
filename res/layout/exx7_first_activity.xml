<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/seven_first_activity_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
        <Button android:id="@+id/seven_first_activity_btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seven_first_activity_btn_start"
                android:onClick="click"/>

        <Button android:id="@+id/seven_first_activity_btn_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seven_first_activity_btn_stop"
                android:onClick="click"/>

    </LinearLayout>

    <TextView
            android:id="@+id/seven_first_activity_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/seven_first_activity_btns"
            android:gravity="center"
            android:textSize="@dimen/seven_first_activity_txt_large"
            android:text="20%"/>



</RelativeLayout>