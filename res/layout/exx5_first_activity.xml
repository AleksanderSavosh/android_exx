<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/default_padding"
              android:background="@android:color/background_light"  >

    <ImageView
            android:id="@+id/five_first_activity_img"
            android:layout_width="@dimen/five_first_activity_img_size"
            android:layout_height="@dimen/five_first_activity_img_size"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/default_margin"
            android:src="@drawable/author"/>

    <ImageView
            android:id="@+id/five_first_activity_arrow"
            android:layout_width="@dimen/five_first_activity_img_size"
            android:layout_height="@dimen/five_first_activity_img_size"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/default_padding"
            android:src="@drawable/btn_direct_message"/>

    <TextView
            android:id="@+id/five_first_activity_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/five_first_activity_img"
            android:layout_toLeftOf="@id/five_first_activity_arrow"
            android:textSize="@dimen/default_text_size"
            android:textColor="@android:color/black"
            android:text="@string/one_second_activity_some_text"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/five_first_activity_img"
            android:layout_below="@id/five_first_activity_txt">
        <ImageView
                android:layout_width="@dimen/five_first_activity_img_size"
                android:layout_height="@dimen/five_first_activity_img_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:src="@drawable/icon_more_option"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding"
                android:layout_centerVertical="true"
                android:text="@string/five_first_activity_data"/>

    </RelativeLayout>
</RelativeLayout>