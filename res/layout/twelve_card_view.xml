<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

        <ImageView android:id="@+id/twelve_card_view_image_16x9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:visibility="gone"/>

        <TextView android:id="@+id/twelve_card_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/twelve_card_view_image_16x9"
                android:layout_margin="0dp"
                android:visibility="gone"/>

        <TextView android:id="@+id/twelve_card_view_text"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/twelve_card_view_title"
                  android:layout_margin="0dp"
                  android:visibility="gone"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>